doctype html
//if lt IE 7
	html(class="no-js lt-ie9 lt-ie8 lt-ie7", lang="en", ng-app="searchApp")
//if IE 7
	html(class="no-js lt-ie9 lt-ie8", lang="en", ng-app="searchApp")
//if IE 8
	html(class="no-js lt-ie9", lang="en", ng-app="searchApp")
// [if gt IE 8] <!
html(class="no-js", lang="en", ng-app="searchApp")
	// <![endif]
	head
		title ci v2
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap-theme.css")
		link(rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.css")
		link(rel="stylesheet" href="stylesheets/screen.css")
		link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,700,300")
	body
		//if lt IE 7
			p.browsehappy!="ou are using an <strong>outdated</strong> browser. Please <a href='http://browsehappy.com/'>upgrade your browser</a> to improve your experience."
		//[endif]

		header
			.row(ng-controller="loginCtrl")
				.col-md-10
				.col-md-2(ng-controller="loginModalController" ng-if="!authenticated")
					button.btn.btn-primary(ng-click="open()") #[i.glyphicon.glyphicon-user] Sign In
					script(type="text/ng-template" id="loginModal.html")
						.modal-header
							h1 Sign In
						.modal-body
							input(type="text" placeholder="username" ng-model="u.name")
							input(type="text" placeholder="password" ng-model="u.pass")
						.modal-footer
							button.btn.btn-primary(ng-click="cancel()") Nevermind.
							button.btn.btn-primary(ng-click="login()") Let's go!
				.col-md-2(ng-if="authenticated")
					button.btn.btn-primary(ng-click="logout()") Log Out ({{currentUser.name}})

		div(ui-view)

		.copyright.center-justify
			img(src="img/hrwlogo1.png")
			p Copyright &copy; 2014 High Rank Websites, Inc.

		script(src="bower_components/angular/angular.js")
		script(src="bower_components/angular-route/angular-route.js")
		script(src="bower_components/angular-cookie/angular-cookie.min.js")
		script(src="bower_components/angular-md5/angular-md5.js")
		script(src="bower_components/ui-router/release/angular-ui-router.js")
		script(src="bower_components/angular-bootstrap/ui-bootstrap-tpls.js")
		script(src="bower_components/jquery/dist/jquery.js")
		script(src="js/app.js")
		script(src="js/controllers.js")
		script(src="js/directives.js")